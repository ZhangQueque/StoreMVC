
@{
    Layout = null;
}

@model AdminViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title> 后台管理  炸天帮:张缺缺作品</title>

    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="~/AdminLTE-2.1.1/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- FontAwesome 4.3.0 -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons 2.0.0 -->
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/AdminLTE-2.1.1/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="~/AdminLTE-2.1.1/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />

</head>
<body class="skin-blue sidebar-mini">


    <div class="wrapper">

        <header class="main-header">
            <!-- 后台模板名称-->
            <a href="/Home/Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>缺</b>商</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>缺</b>缺<b>商</b>城</span>
            </a>
            <!-- 头部导航栏 -->
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">展开/收回</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- 信息-->
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span class="label label-success">1</span>
                            </a>
                            <!-- 信息下拉显示-->
                            <ul class="dropdown-menu">
                                <li class="header">您有一条新消息</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <!-- start message -->
                                            <a href="#">
                                                <div class="pull-left">
                                                    <img src="~/Img/msglogo.png" class="img-circle" alt="缺缺QQ：3393597524" />
                                                </div>
                                                <h4>
                                                    该功能正在制作中！
                                                    <small><i class="fa fa-clock-o"></i> 1 mins</small>
                                                </h4>
                                                <p>缺缺QQ：3393597524 ，出售此项目源码！</p>
                                            </a>
                                        </li><!-- end message -->

                                    </ul>
                                </li>
                                <li class="footer"><a href="#">敬请期待！</a></li>
                            </ul>
                        </li>
                        <!-- 通知-->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning">@Model.LogMessages.Count</span>
                            </a>
                            <!-- 通知下拉显示-->
                            <ul class="dropdown-menu">
                                <li class="header">最新动态</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">

                                        @foreach (var item in Model.LogMessages)
                                        {

                                            <li>
                                                <a href="javascript:AlertMsg('@item.Content');">
                                                    <i class="fa fa-envelope-o text-blue"></i> @item.Content  <span style="color:lightsteelblue;font-size:10px">@item.CreateTime.ToShortDateString() @item.CreateTime.ToShortTimeString()</span>
                                                </a>
                                            </li>
                                        }

                                    </ul>
                                </li>
                                <li class="footer"><a href="#">缺缺动态</a></li>
                            </ul>
                        </li>


                        <!-- 用户-->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @if (string.IsNullOrEmpty(Model.UserDto.Image))
                                {
                                    <img src="~/Img/touxiang.jpg" class="user-image" alt="@Model.UserDto.NickName" />

                                }
                                else
                                {
                                    <img src="@Model.UserDto.Image" class="user-image" alt="@Model.UserDto.NickName" />

                                }
                                <span class="hidden-xs">@Model.UserDto.NickName</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- 用户图片+名称+邮箱 -->
                                <li class="user-header">
                                    @if (string.IsNullOrEmpty(Model.UserDto.Image))
                                    {
                                        <img src="~/Img/touxiang.jpg" class="img-circle" alt="@Model.UserDto.NickName" />
                                    }
                                    else
                                    {
                                        <img src="@Model.UserDto.Image" class="img-circle" alt="@Model.UserDto.NickName" />
                                    }
                                    <p>
                                        <a href="#">
                                            <i class="fa fa-circle  " style="color:lawngreen"></i>
                                            @if (Model.UserDto.User_Role.RoleName == "帮主")
                                            {
                                                <strong style="color:#f56954">@Model.UserDto.User_Role.RoleName</strong>
                                            }
                                            else if (Model.UserDto.User_Role.RoleName == "帮主夫人")
                                            {
                                                <strong style="color:#D81B60">@Model.UserDto.User_Role.RoleName</strong>

                                            }
                                            else if (Model.UserDto.User_Role.RoleName == "副帮主")
                                            {
                                                <strong style="color:#00a65a">@Model.UserDto.User_Role.RoleName</strong>

                                            }
                                            else
                                            {
                                                <strong style="color:white">@Model.UserDto.User_Role.RoleName</strong>
                                            }
                                        </a>
                                        <small>欢迎加入炸天帮！</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                @*<li class="user-body">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">修改资料</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">更改密码</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">联系作者</a>
                                        </div>
                                    </li>*@
                                <!-- Menu Footer-->
                                <!-- 按钮事件-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a asp-action="UserInfo" class="btn btn-default btn-flat">个人中心</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="javascript:Logout();" class="btn btn-default btn-flat">注销</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!--设置按钮-->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- 内容区域 -->
        <div>
            <!-- 页面标题 -->
            <section class="content-header">
                <h1>
                    角色管理 <small> @Model.UserDto.NickName</small>
                </h1>
            </section>
            <div class="row " style="margin-top:16px; ">
                <div class="box box-primary col-lg-7 ">

                    <form class=" col-lg-4">
                        <div class="box-body">
                            <div class="form-group">
                                <div class="form-inline">
                                    <label>用户：</label>
                                    <select class="form-control" id="UserId" >
                                    </select>
                                    <label>角色：</label>
                                    <select class="form-control" id="RoleId"  >
                                    </select>
                                </div>
                            </div>
                             
                            <div class="form-group">
                                <button type="button" onclick="UserToRole()" class="btn btn-primary">分配角色</button>
                            </div>
                        </div><!-- /.box-body -->

                    </form>
                </div>

            </div>
            <footer class="footer">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 1.0
                </div>
                <strong>Copyright &copy; 2020 <a href="http://beian.miit.gov.cn">晋ICP备20002472号-1</a>.</strong> 缺缺作品
            </footer>

        </div><!-- /.content-wrapper -->
        <!-- 设置，修改demo.js -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane" id="control-sidebar-home-tab">
                </div>
                <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div><!-- /.tab-pane -->
            </div>
        </aside>
        <div class='control-sidebar-bg'></div>
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- jQuery UI 1.11.2 -->
    <script src="https://code.jquery.com/ui/1.11.2/jquery-ui.min.js" type="text/javascript"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/AdminLTE-2.1.1/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-2.1.1/dist/js/app.min.js" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-2.1.1/dist/js/demo.js" type="text/javascript"></script>
    <script src="~/canvas-nest/canvas-nest.js" color="49,48,76" opacity='0.9' zIndex="1" count="9"></script>

    <script src="~/lib/jquery.cookie.js"></script>
    <script src="~/layer/layer.js"></script>
    <script src="~/js/baseurl.js"></script>

    <script src="~/js/admin.js"></script>

    <script src="~/js/adminUserMagger.js"></script>

</body>

</html>
